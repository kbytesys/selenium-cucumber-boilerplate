{
  "name": "selenium-cucumber-boilerplate",
  "version": "0.0.1",
  "description": "A easy to use boilerplate for a BDD test suite with selenium and cucumber",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "install:webdriver:chrome": "npm install --no-save chromedriver",
    "install:webdriver:firefox": "npm install --no-save geckodriver",
    "install:webdriver:phantomjs": "npm install --no-save phantomjs-prebuilt",
    "install:webdrivers": "npm-run-all install:webdriver:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kbytesys/selenium-cucumber-boilerplate.git"
  },
  "keywords": [
    "selenium",
    "cucumber-js",
    "testing",
    "bdd"
  ],
  "author": "Andrea Briganti <kbytesys@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/kbytesys/selenium-cucumber-boilerplate/issues"
  },
  "homepage": "https://github.com/kbytesys/selenium-cucumber-boilerplate#readme",
  "dependencies": {
    "chai": "^4.1.2",
    "cucumber": "^4.2.1",
    "cucumber-html-reporter": "^4.0.4",
    "selenium": "^2.20.0",
    "selenium-webdriver": "^4.0.0-alpha.1"
  },
  "devDependencies": {
    "eslint": "^5.2.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "npm-run-all": "^4.1.3"
  }
}
